<div class ="row">
<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  <h2>User info</h2>
  <% if @user.errors.any? %>
    <div id="error">
      <h3><%= @user.errors.count %> errors prohibited this obj from being saved</h3>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li class="error-message"><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <%= form_for(@user) do |f| %>
  <div class = "field">
    <%= f.label :name %><br />
    <%= f.text_field :name, class:"form-control book_title" %>
  </div>
  <div class = "field">
    <%= f.label :image %><br />
    <%= f.attachment_field :profile_image %>
  </div>
  <div class = "field">
    <%= f.label :introduction %><br />
    <%= f.text_area :introduction, class:"form-control book_title" %>
  </div>
  <div class="upload">
    <%= f.submit 'Update User', class:"btn btn-sm btn-secondary" %>
  </div>
  <% end %>
</div>
</div>